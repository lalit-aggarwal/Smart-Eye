<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/bg">
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/crop" android:onClick="cropImage"></Button>
        <Button android:id="@+id/button2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="View in Hindi" android:onClick="parseImageHin"></Button>
        <Button android:id="@+id/button3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="View in Eng" android:onClick="parseImageEng"></Button>
    </LinearLayout>
    <ImageView android:layout_width="wrap_content" android:src="@drawable/icon" android:id="@+id/imagePreview" android:layout_height="wrap_content" android:maxHeight="300dip"></ImageView>
</LinearLayout>
